<div class="d-flex align-items-center mb-4">
  <h1 class="me-3 mb-0">Minhas Listas</h1>
  <% if (authed) { %>
    <form class="d-flex flex-grow-1" method="post" action="/lists">
      <input type="text" class="form-control me-2" name="name" placeholder="Criar nova listaâ€¦" required />
      <button class="btn btn-primary" type="submit"><i class="bi bi-plus-lg me-1"></i>Criar</button>
    </form>
  <% } %>
  </div>

<div class="row g-3">
  <% if (!lists.length) { %>
    <div class="col-12"><div class="alert alert-info">Nenhuma lista encontrada.</div></div>
  <% } %>
  <% lists.forEach(l => { %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100">
        <div class="card-body d-flex flex-column">
          <div class="d-flex align-items-center justify-content-between">
            <h5 class="card-title mb-0"><%= l.name %></h5>
            <span class="badge badge-soft rounded-pill"><%= l.total %></span>
          </div>
          <p class="card-text muted mt-2">Card(s) nesta lista</p>
          <div class="mt-auto d-flex gap-2">
            <a class="btn btn-outline-primary w-100" href="/list/<%= l.id %>/view"><i class="bi bi-eye me-1"></i>Visualizar</a>
            <% if (authed) { %>
              <a class="btn btn-primary w-100" href="/list/<%= l.id %>"><i class="bi bi-pencil me-1"></i>Editar</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
  </div>
